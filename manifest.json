{
  "manifest_version": 2,
  "name": "Open with Pinta",
  "short_name": "Open with Pinta",
  "description": "Open images with Pinta via right mouse click on image",
  "version": "0.2",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [ "contextMenus", "storage", "tabs", "nativeMessaging", "<all_urls>"],
  "minimum_chrome_version": "21",
  "icons": {
    "16": "icon-xs.png",
    "48": "icon-s.png",
    "128": "icon-l.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["main.js"]
  }
}
